@model User
@{
    ViewBag.Title = "Edit";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="content">
    <div class="container-fluid">
        <div class="row">
            <div class="col-md-8">
                <div class="button-action m-b-10">
                    <a href="@Url.Action("Index","Staff")" class="btn btn-warning btn-fill">Trở về</a>
                </div>
                <div class="card">
                    <div class="header">
                        <h4 class="title">Cập nhật thông tin</h4>
                    </div>
                    <div class="content">
                        @using(Html.BeginForm("Edit","Staff",FormMethod.Post)){
                            @Html.HiddenFor(m=>m.UserID)
                            <div class="row">
                                <div class="col-md-8">
                                    <div class="form-group">
                                        <label>Họ và tên</label>
                                        @Html.TextBoxFor(m => m.FullName, new { @class ="form-control"})
                                    </div>
                                </div>
                            </div>
                            <div class="row">
                                <div class="col-md-8">
                                    <div class="form-group">
                                        <label>Số điện thoại</label>
                                        @Html.TextBoxFor(m => m.Phone, new { @class = "form-control" })
                                    </div>
                                </div>
                            </div>
                            
                            <button type="submit" class="btn btn-info btn-fill">Cập nhật</button>
                            <div class="clearfix"></div>
                        }
                    </div>
                </div>
            </div>
            <div class="col-md-4">
                <div class="card card-user">
                    <div class="image">
                        <img src="https://ununsplash.imgix.net/photo-1431578500526-4d9613015464?fit=crop&amp;fm=jpg&amp;h=300&amp;q=75&amp;w=400" alt="...">
                    </div>
                    <div class="content">
                        <div class="author">
                            <a href="#">
                                @{
                                    var path = "/Content/img/default-avatar.png";
                                    if (!String.IsNullOrEmpty(Model.ProfilePicture))
                                    {
                                        path = Model.ProfilePicture;
                                    }
                                }
                                <img class="avatar border-gray" width="100px" src="@path" alt="@Model.FullName" title="@Model.FullName">

                                <h4 class="title">
                                    @Model.FullName<br>
                                    <small>@Model.Email</small>
                                </h4>
                            </a>
                        </div>
                        <p class="description text-center">
                            @Model.Phone
                        </p>
                    </div>
                    <hr>
                    <div class="text-center">
                        <button href="#" class="btn btn-simple"><i class="fa fa-facebook-square"></i></button>
                        <button href="#" class="btn btn-simple"><i class="fa fa-twitter"></i></button>
                        <button href="#" class="btn btn-simple"><i class="fa fa-google-plus-square"></i></button>

                    </div>
                </div>
            </div>

        </div>
    </div>
</div>

